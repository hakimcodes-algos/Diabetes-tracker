<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/divider_large"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/padding_end"
    android:paddingLeft="@dimen/padding_end"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/padding_end"
    android:paddingRight="@dimen/padding_end"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/text_medium"
            tools:text="Tag" />

        <TextView
            android:id="@+id/description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/text_small"
            tools:text="10 entries" />

    </LinearLayout>

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="@dimen/size_image"
        android:layout_height="@dimen/size_image"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/delete"
        android:focusable="true"
        android:src="@drawable/ic_delete"
        app:tint="?iconColorPrimary" />

</LinearLayout>